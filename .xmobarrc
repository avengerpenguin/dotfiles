Config { overrideRedirect = False
       , font = "xft:Fira Code Retina:size=12"
       , additionalFonts = ["xft:FontAwesome:size=1"]
       , template = "%StdinReader% }{ Vol: %alsa:default:Master% | %memory% | %EGCC% | %date% "
   , commands =
        -- weather monitor
        [ Run Weather "EGCC" [ "--template", "<skyCondition> | <fc=#4682B4><tempC></fc>Â°C | <fc=#4682B4><rh></fc>%"
                             ] 36000
                    , Run Alsa "default" "Master"
                        [ "--template", "<volumestatus>"
                        , "--suffix"  , "True"
                        , "--"
                        , "--on", ""
                        ]
        -- memory usage monitor
        , Run Memory         [ "--template" ,"Mem: <usedratio>%"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "darkgreen"
                             , "--normal"   , "darkorange"
                             , "--high"     , "darkred"
                             ] 10


        -- time and date indicator
        --   (%F = y-m-d date, %a = day of week, %T = h:m:s time)
        , Run Date           "<fc=#ABABAB>%F (%a) %T</fc>" "date" 10
        , Run StdinReader
        ]
   }
